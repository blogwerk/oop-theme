{% extends 'layout/base.html.twig' %}

{% block content %}
    {% for post in posts %}
        <article {{ post.post_class }}>
            <header>
                <h1>{{ post.post_title }}</h1>
            </header>
            <section>
                {{ post.post_content }}
            </section>
        </article>
    {% endfor %}
{% endblock %}

{% block sidebar %}
    {% embed 'layout/sidebar.html.twig' %}{% endembed  %}
{% endblock sidebar %}